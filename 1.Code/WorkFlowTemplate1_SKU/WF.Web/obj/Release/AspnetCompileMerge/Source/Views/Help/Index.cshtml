<script type="text/javascript">
    function exportCSV(type) {
        $.post(getRootUrl() + "Common/ExportToCSV", { type:type, keyword: "", status: 0 }, function (filePath) {
            if (filePath.toLowerCase().indexOf(".csv") > 0) {
                location.href = getRootUrl() + filePath;
            }
            else {
                alert(filePath);
            }
        });
    }
</script>
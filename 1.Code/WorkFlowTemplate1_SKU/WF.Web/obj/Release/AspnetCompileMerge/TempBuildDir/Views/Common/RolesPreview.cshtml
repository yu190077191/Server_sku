@using WF.BusinessRule;
@using WF.Model;
@using WF.Framework;

@model List<DepartmentRole>
@{
    ViewBag.Title = "User Management";
    bool IsAdmin = WF.Web.Controllers.WorkFlowAPIController.IsAdmin;
    MvcHtmlString checkedStr = MvcHtmlString.Create(" checked=\"checked\"");
    MvcHtmlString action = MvcHtmlString.Create(string.Empty);
    if (Model != null && Model.Count > 0)
    {
        action = MvcHtmlString.Create(Model[0].Action);
    }
}
@section Header{
    <script type="text/javascript" src="@(Url.Content("~/Scripts/WorkFlow.js?" + DateTime.Now.ToString()))"></script>
}
<div style="padding:30px 50px;line-height:30px;font-size:12px;height:auto;">
    <div style="margin-bottom:5px;">
        <div>
                Request: @action
                <br />Reason: <b>@Model[0].Reason</b>
                <br />Status: <b>@Model[0].Status</b>
                <br />Processed by: @Model[0].ProcessedBy
                <br />Processed Time: @Model[0].ProcessedTime
                <br />Processed Remark: @Model[0].ProcessedRemark
        </div>
        <div>
            @if (Model[0].EmployeeId == Operation.OperationBy)
            {
                <button style="float:left;margin-right:10px;" type="button" class="button" onmousedown="this.className = 'buttonPressed'" onmouseout="this.className = 'button'" onclick="updateRole('Cancel');">@(Html.Lang("Cancel"))</button>
            }
            @if (IsAdmin)
            {
            <button style="float:left;margin-right:10px;" type="button" class="button" onmousedown="this.className = 'buttonPressed'" onmouseout="this.className = 'button'" onclick="updateRole('Approve');">@(Html.Lang("Approve"))</button>
            <button style="float:left;margin-right:10px;" type="button" class="button" onmousedown="this.className = 'buttonPressed'" onmouseout="this.className = 'button'" onclick="updateRole('Reject');">@(Html.Lang("Reject"))</button>
            }
        </div>
    </div>
    <div style="clear:both;"></div>
    <hr />
    <div class="rightDiv" style="width:100%;padding-left:0;margin-left:0;">
        <div id="searchResult">
            <table cellpadding="0" cellspacing="0" width="100%" class="tbl">
                @{
                    if (Model != null && Model.Count > 0)
                    {
                        int count = 0;
                        <thead>
                            <tr style="text-align:center;">
                                <th style="text-align:center;">
                                    <input type="checkbox" id="selectall" @(checkedStr) onclick="selectAll(this);" />
                                </th>
                                <th style="text-align:center;">Name</th>
                                <th style="text-align:center;">Department</th>
                                <th style="text-align:center;">Role</th>
                            </tr>
                        </thead>
                        foreach (DepartmentRole item in Model)
                        {
                            //if (Operation.UserName.ToUpper() == "NESTLE\\" + item.AccountName.ToUpper())
                            //{
                            //    continue;
                            //}

                            string title = item.RoleName;
                            if (item.DisplayName == null)
                            {
                                item.DisplayName = string.Empty;
                            }
                            else
                            {
                                item.DisplayName = item.DisplayName.Replace("'", "");
                            }

                            <tr id="roleTR@(item.Id.ToString())" onmouseover="this.className='trFocused'" onmouseout="this.className='trCommon'">
                                <td class="listtd" align="center">
                                    @if (item.Key != "0")
                                    {
                                        <input type="checkbox" id="checkbox@(item.Key)" @(checkedStr) />
                                    }
                                    else
                                    {
                                        <span title="has no role to copy or change">NA</span>
                                    }

                                </td>
                                <td class="listtd">
                                    @item.DisplayName
                                </td>
                                <td class="listtd" id="tdDepartment@(item.EmployeeId)">
                                    @Html.Raw(item.Department)
                                </td>
                                <td class="listtd" id="tdTitle@(item.EmployeeId)">
                                    @Html.Raw(item.RoleName)
                                </td>
                            </tr>
                        }
                    }
                }
            </table>
        </div>
    </div>
</div>
<div id="popDiv" style="display:none;">
    <div style="width:300px;line-height:24px;">
        <b id="actionPOPID"></b>
        <br />
        <div id="newPOPID">
            <span id="tip">Please input the new approver's email:</span>
            <br />
            <input type="text" id="emailToPOPID" style="width:200px" />
        </div>
        <span id="tip">Please input the justification:</span>
        <br />
        <textarea id="reasonPOPID" style="width:200px;height:100px;"></textarea>
        <br />
        <button style="" type="button" class="button" onmousedown="this.className = 'buttonPressed'" onmouseout="    this.className = 'button'" onclick="applyRole(POPID);">@(Html.Lang("Submit"))</button>
    </div>
</div>
<script type="text/javascript">
    function searchUser(pageIndex) {
        var query = new Object();
        query.PageIndex = pageIndex;
        query.Keyword = $.trim($("#keyword").val());
        query.Array = new Array();

        var a = query.Keyword.indexOf("<");
        if (a > 0) {
            var b = query.Keyword.indexOf(">");
            if (b > a) {
                query.Keyword = query.Keyword.substr(a + 1, b - a - 1);
            }
        }

        //var RoleId = $("#RoleSelect").val();
        //if (RoleId != "") {
        //    query.Array.push(createParameter("RoleId", RoleId));
        //}

        //var department = $("#departmentSelect").val();
        //if (department != "") {
        //    query.Array.push(createParameter("DepartmentId", department));
        //}
        pop("Please wait...");
        $.get(location.href, { json: $.toJSON(query) }, function (html) {
            closeMe();
            $("#searchResult").html(html);
        });
    }

    var _popID = 0;
    var _mode = "";
    function updateRole(mode) {
        _mode = mode;
        _popID++;
        var html = $("#popDiv").html();
        html = html.replace(/\POPID/g, _popID.toString());
        pop(html, 250);
        var action = "";
        switch (mode) {
            case "copy":
                action = "Copy role to a new user";
                break;
            case "transfer":
                action = "Transfer role to a new user";
                break;
            case "delete":
                action = "Delete role";
                $("#new" + _popID.toString()).hide();
                break;
        }

        $("#action" + _popID.toString()).html(action);
    }

    function applyRole(_popID) {
        var email = $("#emailTo" + _popID.toString()).val();
        var reason = $("#reason" + _popID.toString()).val();
        var a = email.indexOf("<");
        if (a > 0) {
            var b = email.indexOf(">");
            if (b > a) {
                email = email.substr(a + 1, b - a - 1);
            }
        }

        var checkedIds = getSelectedIds();
        if (checkedIds == "") {
            alert("Please select the roles you want to " + _mode + "!");
            return;
        }

        if (_mode != "delete" && email.indexOf("@@") < 0) {
            alert("Please input the new user's email!");
            return;
        }

        if (reason == "") {
            alert("Please input the reason!");
            return;
        }

        if (!confirm("Are you sure to " + _mode + " the roles?")) return;

        $.post("@(Url.Content("~/Common/ApplyRoleChange"))", { checkedIds: checkedIds, mode: _mode, email: email, reason: reason }, function (msg) {
            alert(msg);
    });
    }
</script>